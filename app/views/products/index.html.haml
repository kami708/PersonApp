-if user_signed_in?  
  .top
    = render 'shared/header'
    .top__contents
      .top__contents__box
        .top__contents__box__profile
          %h2 
            Cross Cultureへようこそ！
            %br/
            何をお探しですか？
        .top__contents__box__list
          %ul.list
            %li.new
              = link_to "NEW RELEASES", "#root_index-1"
            %li.men
              = link_to "MEN", "#root_index-2"
            %li.women
              = link_to "WOMEN", "#root_index-3"
            %li.kids
              = link_to "KIDS", "#root_index-4"
            %li.shose
              = link_to "SHOUSE", "#root_index-5"
        .top__contents__box__items
          .top__contents__box__items__new-releases
            .top__contents__box__items__new-releases__title
              %div{id: "root_index-1"}
                %h3 新着商品
            .top__contents__box__items__new-releases__list
              #slider1.swiper-container
                .swiper-wrapper
                  = render partial: "product-slide", collection: @new_releases, as: "product"
                .swiper-button-prev.swiper-button-white
                .swiper-button-next.swiper-button-white
              #thumbs1.swiper-container.mb60
                .swiper-wrapper
                  = render partial: "product-thumbs", collection: @new_releases, as: "product"
