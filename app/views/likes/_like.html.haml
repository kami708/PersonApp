- if product.like_user(current_user.id)
  = button_to product_like_path(like, product_id: product.id), method: :delete, class: "products__right__box__product__form__buys__like", id: "like-button", remote: true do
    %span
      お気に入りに追加
    = image_tag "icon_red_heart.png", size: "18"
    = product.likes_count
- else
  = button_to product_likes_path(product), method: :post, class: "products__right__box__product__form__buys__like", id: "like-button", remote: true do
    %span
      お気に入りに追加
    = image_tag "icon_heart.png", size: "18"
    = product.likes_count

